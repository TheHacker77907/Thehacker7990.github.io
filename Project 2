<html><head>
<title> CS110 Project2 </title>
	<script type="text/javascript">
function calculate() { //starting calculate function
	
	var resp ="";
	var count =0, totalPrice =0, tax=0;
	
	for (i=0; i<=7; i++) { //starting for loop
	 if (document.survey.item[i].checked ){
		resp = resp+ "\n" + document.survey.item[i].value;
		count = count + 1;
		} //ending if
	 } // ending for loop
	 
		resp = resp + "\nYou have bought " + count + " items.";
		var j = document.survey.class.selectedIndex;
		
		if (document.survey.class.options[j].value == "")
		{ alert ("You must select your classification!");}
		
	else if (document.survey.class.options[j].value == "HighSchoolSenior")
		{resp = resp + "\n\nYou are a High School Senior Student.";}
		
	else if (document.survey.class.options[j].value == "freshman")
		{resp = resp + "\n\nYou are a College Freshman.";}
		
	else if (document.survey.class.options[j].value == "sophomore")
		{resp = resp + "\n\nYou are a College Sophomore.";}
		
	else if (document.survey.class.options[j].value == "junior")
		{resp = resp + "\n\nYou are a College Junior.";}
		
	else if (document.survey.class.options[j].value == "senior")
		{resp = resp + "\n\nYou are a College Senior.";}
		
	document.survey.answer.value = resp;
	
if (document.survey.item[0].checked )
{	totalPrice+=9.45;}
if (document.survey.item[1].checked)
{	totalPrice+=9.86;}
if (document.survey.item[2].checked)
{	totalPrice+=8.39;}
if (document.survey.item[3].checked)
{	totalPrice+=10.49;}
if (document.survey.item[4].checked)
{	totalPrice+=8.59;}
if (document.survey.item[5].checked)
{	totalPrice+=3.25;}
if (document.survey.item[6].checked)
{	totalPrice+=5.59;}
if (document.survey.item[7].checked)
{totalPrice+=12.13;}

tax = Math.round(100*((0.07) * totalPrice))/100;
payment =totalPrice + tax;

document.survey.answer.value =
resp+"\n"+"\nYour total payment including tax is: $" + Math.round(100*payment)/100;

}//Close calculate function

</script>
</head>

